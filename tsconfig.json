{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./lib",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "removeComments": true,
    "declaration": false,
    "sourceMap": true,
    "jsx": "react",
    "typeRoots": ["index.d.ts", "node_modules/@types"]
  },
  "include": ["./src/*.tsx"],
  "exclude": ["node_modules"]
}
